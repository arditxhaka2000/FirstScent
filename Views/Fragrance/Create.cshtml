@model FirstScent.Models.Fragrances

@{
    ViewData["Title"] = "Create";
}

<h1>Add Fragrances</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Unisex">Unisex</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SizeInMl" class="control-label"></label>
                <input asp-for="SizeInMl" class="form-control" />
                <span asp-validation-for="SizeInMl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label" style="padding-top:50px">Upload Picture</label>
                <input asp-for="Picture" type="file" class="form-control-file" />
            </div>
            <div class="form-group">
                <label asp-for="NewIn" class="control-label" style="padding-top:50px">Is New Arrival?</label>
                <input asp-for="NewIn" type="checkbox" class="form-control-file" />
            </div>
            <div class="form-group">
                <label asp-for="IsBestSeller" class="control-label" style="padding-top:50px">Is Best Seller?</label>
                <input asp-for="IsBestSeller" type="checkbox" class="form-control-file" />
            </div>
            <div class="form-group" style="padding-top:50px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
