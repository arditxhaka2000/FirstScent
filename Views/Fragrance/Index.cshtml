@model FirstScent.Models.FragranceTypeViewModel

@{
    ViewData["Title"] = "Index";
}
<style>
    #malecard {
        width: 18rem;
        margin-right: 20px;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 14px;
    }

    @@media (max-width: 600px) {
        #malecard {
            width: 13rem;
        }
    }
</style>
<h1>Fragrances</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row" style="">
    <div class="col-lg-12" style="justify-content: center; display:flex;">
        <form asp-controller="Fragrance" asp-action="Index" method="get">
            <p>
                <select asp-for="FragranceCategory" asp-items="Model.Category">
                    <option value="">All</option>
                </select>
                Name: <input type="text" asp-for="SearchString" />
                <input type="submit" value="Filter" />
            </p>
        </form>
    </div>
    
</div>



<div class="container">
    <div class="row"> 
        @foreach (var item in Model.Fragrances!)
        {
            <div class="card" id="malecard" data-price="@item.Price" data-name="@item.Name">

                <a href="@Url.Action("Edit", "Fragrance", new { id = item.Id })" style="color: black; text-decoration: none; text-align: center;">
                    <img class="card-img-top" src="@item.PictureUrl" alt="Image">
                    <div class="card-body">
                        <p style="font-weight: bold; font-size: 25px">@Model.FragranceBrand</p>
                        <p>@item.Name</p>
                        <p>@item.Price€</p>
                    </div>

                </a>
            </div>
            
        }
    </div>
    

</div>

