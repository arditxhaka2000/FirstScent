@model List<UserOrders>

@if (Model == null || !Model.Any())
{
    <p class="text-center" style="font-size: 24px;">There are no orders made by you.</p>
}
else
{
    @foreach (var order in Model)
    {
        <div class="col-12 border border-color mb-4">
            <div class="row">
                <div class="col-12">
                    <p style="display: inline;">Numri i porosisë: @order.OrderNumber</p>
                    <p style="display: inline; margin-left: 10px;">•</p>
                    <p style="display: inline; margin-left: 10px;">@order.OrderDate.ToString("dd.MM.yyyy")</p>
                    <p style="display: inline; margin-left: 10px;">•</p>
                    <p style="display: inline; margin-left: 10px;">@(order.Status == 0 ? "Në Procesim" : "Përfunduar")</p>
                    <p style="display: inline; margin-left: 10px;">•</p>
                    <p style="display: inline; margin-left: 10px;">@order.TotalSum€</p>
                    <p style="display: inline; margin-left: 10px;">@order.Email</p>
                </div>
            </div>

            <div class="row mt-3">
                <div class="card-deck d-flex">
                    @foreach (var item in order.items)
                    {
                        <div class="card" id="porosiaCard">
                            <img src="@item.PictureUrl" class="card-img-top" alt="@item.Name">
                            <div class="card-body">
                                <p class="card-text">@item.Name</p>
                            </div>
                        </div>
                    }
                </div>
                @foreach (var orders in Model)
                {

                    if (orders.items.Count > 3)
                    {
                        <a href="path-to-your-view.html" class="see-details">
                            <i class="fas fa-info-circle"></i> See Details
                        </a>
                    }


                }

            </div>
        </div>

    }

}


